{
	"name": "typopo-vscode",
	"displayName": "Typopo for VS Code",
	"description": "Fix frequent typos in multiple languages with a single click in VS Code with Typopo",
	"version": "0.0.2",
	"publisher": "brano",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:typopo-vscode.fixTypos"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/surfinzap/typopo-vscode.git"
	},
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "typopo-vscode.fixTypos",
				"title": "Fix Typos",
				"category": "Typopo"
			}
		],
		"keybindings": [
			{
				"command": "typopo-vscode.fixTypos",
				"key": "ctrl+alt+T",
				"mac": "cmd+alt+T",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"typopo": "^2.3.5"
	}
}
